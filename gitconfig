[include]
	path = .gitconfig.secret
[core]
	excludesfile = ~/.gitignore_global
[push]
	default = current
[delta]
	side-by-side = true
	light = true
	line-numbers = true
[pager]
	branch =
	diff = delta
	show = delta
[mergetool]
	keepBackup = false
[merge]
	tool = meld
[diff]
	tool = vimdiff
	colorMoved = default
[difftool]
	prompt = false
[commit]
	verbose = true
[alias]
	fixup = !COMMIT=`git log --oneline|fzf|cut -d' ' -f1` && git commit --fixup=${COMMIT}
	squash = !COMMIT=`git log --oneline|fzf|cut -d' ' -f1` && git commit --squash=${COMMIT}
	wip = !git add -A && git commit --no-verify -m 'WIP'
	unwip = reset HEAD~1
	root = rev-parse --show-toplevel
[rebase]
	autosquash = true
[pull]
	rebase = true
[rerere]
	enabled = true
[submodule]
	recurse = true
[status]
	submoduleSummary = true
[branch]
	sort = -committerdate
